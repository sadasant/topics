        border-bottom 1px solid white
        border-right 1px solid white
        box-shadow inset 0 0 0 #00ccff
        animation glow 20s infinite cubic-bezier(0,0,.7,1)
      #loading.stop
        animation none
      #loading.error
        background #ED0010
        box-shadow none
        animation none
