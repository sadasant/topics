      color #a1a1a1
    .title
      border 1px solid #eee
      border-bottom 0
      border-radius 20px 20px 0 0
      background #f0f0f0
      box-shadow inset 0 10px 30px #fff
      text-shadow 1px 1px 0px rgba(#99eeff, .5)
      text-align center
      padding 20px 0 10px
      span
        color #777
        font-size 12px
        letter-spacing 2px
      h1
        font-family 'Quando', serif
        font-weight bold
        font-size 42px
        color #2A3732

  #welcome, #fulltopic
