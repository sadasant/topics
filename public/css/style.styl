          background #00aaee
          text-shadow 0 1px 1px #0077bb
          box-shadow inset 0 0 10px #00ddff
      .topic:hover
        background #FCF8D0
        .name
          text-shadow 1px 1px 0px rgba(#99eeff, .5)
        .del
          border 1px solid #DEDABD
          border-top 1px solid #CCC493
          border-left 1px solid #CCC493
          background #D9D3AC
        .del:hover
          cursor pointer
          text-shadow 0 1px 1px #DC0000
          border 1px solid #ED0010
          border-right 1px solid #DC0000
          border-bottom 1px solid #DC0000
          background #ED0010
        .del:active
          background #C80000
          border 1px solid #DC0000
          text-shadow 0 1px 1px #A10000
          box-shadow inset 0 0 10px #ED0010
      .newTopic, .newNote
        .name, .text
          font-weight normal
          font-size 13px
          width 494px
          text-shadow none
          border 1px solid #ddd
          border 1px solid #e9e9e9
          border-bottom 1px solid #e0e0e0
          border-radius 5px
          padding 3px 5px
        .count
          color #bbb
          font-size 12px
          display inline-block
          margin-left 10px
          text-shadow 1px 1px 0 white
          small
            font-size 10px
        .new
          margin-top -1px
      #loading
        background #5D6A65
        height 2px
        width 630px
        margin-top 8px
        margin-left 11px
