@import 'import/yui-reset-min.css'
@import 'nib'

body, html
  margin 0

html
  width 100%
  height 100%
  font-family sans-serif
  padding 0

body
  padding 30px 0

a
  color inherit
  text-decoration none
  outline 0

strong
  font-weight bold

button:focus, button::-moz-focus-inner
  border  0
  outline 0

textarea
  resize none

hr
  color none
  border 1px solid #ddd

::selection
  background #777
  color #fff
::-moz-selection
  background #777
  color #fff

button::-moz-focus-inner
  border 0
  padding 0

#box
  margin 0 auto 0
  width 700px
