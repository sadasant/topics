#box.public
  width 626px
  #fulltopic
    #header
      .user
        margin-right 25px
    .topicname
      padding-bottom 4px
    .buttom
      width 606px
    .text
      min-height 0

@keyframes glow
  0%
    box-shadow inset   0px 0 0 #00ccff
    background #2A3732
  90%
    box-shadow inset 650px 0 0 #00ccff
    background #5D6A65
  92%
    box-shadow inset 650px 0 0 #99eeff
    background #2A3732
  96%
    box-shadow inset 650px 0 0 #2A3732
  100%
    box-shadow inset   0px 0 0 #2A3732

@keyframes mini-glow
  0%
    box-shadow inset   0px 0 0 #00ccff
    background #2A3732
  70%
    box-shadow inset  40px 0 0 #00ccff
    background #5D6A65
  100%
    box-shadow inset   0px 0 0 #00ccff
    background #2A3732

